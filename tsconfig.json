{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false, // Нет Неявного Этого
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "server"]
}
